  <script>
        function decodeBase64(base64) {
            base64 = base64.replace(/-/g, '+').replace(/_/g, '/');

            const padding = base64.length % 4;
            if (padding) {
                base64 += '='.repeat(4 - padding);
            }

            const decodedString = atob(base64);
            return decodeURIComponent(Array.prototype.map.call(decodedString, function(c) {
                return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
            }).join(''));
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            const base64String = '';
            const decodedHtml = decodeBase64(base64String);
            document.getElementById('decodedContent').innerHTML = decodedHtml;
        });
    </script>
    <h1>Contenido Decodificado</h1>
    <div id="decodedContent"></div>
